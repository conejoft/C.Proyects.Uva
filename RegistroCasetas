#include <stdio.h>
#include <stdlib.h>
#define FILAS 3
#define COLUMANAS 4

void mensajeBienvenida(){
    printf("\n\t\t Bienvenido a la aplicaci%cn para registrar las ventas en las casetas,\n\t\t esperamos que haya disfrutado la feria del libro.", 162);
    printf("\n\t\t Pulse <Intro> para continuar..");
    getch();
    system("cls");
}

void mensajeDespedida(){
    printf("\n\t\t Gracias por usar la aplicación para registrar las ventas en las casetas,\n\t\t esperamos que haya disfrutado la feria del libro.");
    printf("\n\t\t Pulse <Intro> para finalizar..");
    getch();
    system("cls");
    return 0;
}

void mostrarMenu(){

    int opcion;

    printf("\n\t\t Menu Principal");
    printf("\n\t\t ==============");

    printf("\n\t\t 1.Informe General de Ventas");
    printf("\n\t\t 2.Unidades Vendidas de cada libro");
    printf("\n\t\t 3.Importe total vendido en cada caseta");
    printf("\n\t\t 4.Pasar a mayuscula letras posiciones imapres de los titulos");
    printf("\n\t\t 5.Pasar a mayuscula la ultima letra de los");
    printf("\n\t\t 0.Salir");
    printf("\n\t\t Elige una opción [0,1,2,3,4 o 5] \n\t\t ");
    scanf("%i", &opcion);

    while(opcion<0 || opcion>6){
            printf("\n\t\t No es una opción valida, vuelva a introducir la opción a elegir \n\t\t ");
            scanf("%i", &opcion);
            fflush(stdin);
    }

     switch(opcion){
        case 1: system("cls");
                printf("\n\t\t 1.-Registrar datos de los camiones \n ");
                printf("\t\t ------------------ \n\n");
                mostrarMenu();
                break;

        case 2: system("cls");
                printf("\n\t\t 2.-Informe general \n ");
                printf("\t\t -------------------- \n\n");
                mostrarMenu();
                break;

        case 3: system("cls");
                printf("\n\t\t 3.-Informe compra camiones (año) \n ");
                printf("\t\t ----------------------------------- \n\n");
                mostrarMenu();
                break;

        case 4: system("cls");
                printf("\n\t\t 4.-Informe camiones (marca y Km. en un día) \n ");
                printf("\t\t ----------------------------------- \n\n");
                mostrarMenu();
                break;

        case 5: system("cls");
                printf("\n\t\t 5.-Mostrar Km. cada día de la semana de un camión \n ");
                printf("\t\t ----------------------------------- \n\n");
                mostrarMenu();
                break;

        case 0: system("cls");
                printf("\n\t\t 0.-Salir \n ");
                printf("\t\t -------- \n\n");
                mensajeDespedida();
                break;
}
}


int main(){

    mensajeBienvenida();
    mostrarMenu();

}
